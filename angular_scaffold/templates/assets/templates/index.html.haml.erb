%div{"ng-controller" => "<%= class_name.camelize(:upper) %>ListCtrl"} 
  %h4{ "translate" => "<%= class_name.underscore %>.list_of" }

  %div
    %div{ :class => "col-md-4"}
      = render_haml("<%= class_name.tableize %>/_filter.html.haml")
    %div{ :class => "col-md-8"}
      %ul
        %li{ "ng-repeat" => "<%= class_name %> in <%= class_name.pluralize %> | filter:<%= class_name %>Query | orderBy:<%= class_name %>Order"}
      <%- @attributes.each do |attribute| %>
        <%- if attribute.type == "text" %>
          %p {{<%= class_name %>.<%= attribute.name %>}}
        <%- else %>
          %label {{<%= class_name %>.<%= attribute.name %>}}
        <%- end %>
      <%- end %>
