%input{ :name => "id", :type => "hidden", "ng-model" => "<%= class_name.underscore %>.id"}
<%- @attributes.each do |attribute| %>
.form-group
<%- if attribute.type == "string" %>
  %label{ "translate" => "<%= class_name.underscore %>.string" } 
  %input{ :name => "<%= attribute.name %>", :class => "form-control", "ng-model" => "<%= class_name.underscore %>.<%= attribute.name %>", "ng-minlength" => "3", "ng-maxlength" => "20", "required" => "required"}
  %span{ "ng-show" => "<%= class_name %>Form.name.$error.minlength", :class => "help-block", "translate" => "<%= class_name.underscore %>.must_be_caracters_at_least" }
  %span{ "ng-show" => "<%= class_name %>Form.name.$error.maxlength", :class => "help-block", "translate" => "<%= class_name.underscore %>.must_be_caracters_maximum" }
<%- end %>
<%- if attribute.type == "text" %>
  %label{ "translate" => "<%= class_name.underscore %>.textarea" } 
  %textarea{ :name => "<%= attribute.name %>", :class => "form-control", "ng-model" => "<%= class_name.underscore %>.<%= attribute.name %>" }
<%- end %>
<%- if attribute.type == "integer" %>
  %label{ "translate" => "<%= class_name.underscore %>.integer" } 
  %input{ :name => "<%= attribute.name %>", :class => "form-control", "ng-model" => "<%= class_name.underscore %>.<%= attribute.name %>" }
<%- end %>
<%- if attribute.type == "decimal" %>
  %label{ "translate" => "<%= class_name.underscore %>.decimal" } 
  %input{ :name => "<%= attribute.name %>", :class => "form-control", "ng-model" => "<%= class_name.underscore %>.<%= attribute.name %>" }
<%- end %>
<%- end %>