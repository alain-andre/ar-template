%div{"ng-controller" => "<%= class_name.camelize(:upper) %>ListCtrl"} 
  %h4{ "translate" => "<%= class_name.underscore %>.list_of" }

  %div
    %a{ "href" => "#/admin/<%= class_name.tableize %>/new", :class => "btn btn-default", "translate" => "<%= class_name.underscore %>.new" }
  
  %div
    %div{ :class => "col-md-4"}
      = render_haml("<%= class_name.tableize %>/_filter.html.haml")
    %div{ :class => "col-md-8"}
      %ul
        %li{ "ng-repeat" => "<%= class_name.underscore %> in <%= class_name.underscore.pluralize %> | filter:<%= class_name %>Query | orderBy:<%= class_name %>Order"}
      <%- @attributes.each do |attribute| %>
        <%- if attribute.type == "text" %>
          %p {{<%= class_name.underscore %>.<%= attribute.name %>}}
        <%- else %>
          %label {{<%= class_name.underscore %>.<%= attribute.name %>}}
        <%- end %>
      <%- end %>
          %a{ "ui-sref" => "view<%= class_name.camelize(:upper) %>({id:<%= class_name.underscore %>.id})", :class => "btn btn-default", "translate" => "<%= class_name.underscore %>.view_button" }
          %a{ "ui-sref" => "edit<%= class_name.camelize(:upper) %>({id:<%= class_name.underscore %>.id})", :class => "btn btn-default", "translate" => "<%= class_name.underscore %>.edit_button" }
