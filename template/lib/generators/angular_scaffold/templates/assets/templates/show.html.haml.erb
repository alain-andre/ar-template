%div{"ng-controller" => "<%= class_name.camelize(:upper) %>ViewCtrl"}
  %h4{ "translate" => "<%= class_name.underscore %>.detail_page" } 
  
  %div
<%- @attributes.each do |attribute| %>
  <%- if attribute.type == "text" %>
    %p {{<%= class_name.underscore %>.<%= attribute.name %>}}
  <%- else %>
    %label {{<%= class_name.underscore %>.<%= attribute.name %>}}
  <%- end %>
<%- end %>