%form{:name => "<%= class_name %>Form", "ng-submit" => "submit()"}
  .form-group
    %label 
      =I18n.t('.name_of', :default => "%{product}'s name", :product => "<%= class_name %>")
    %input{ :name => "id", :type => "hidden", "ng-model" => "<%= class_name %>.id"}
    %input{ :name => "name", "ng-model" => "<%= class_name %>.name", "ng-minlength" => "3", "ng-maxlength" => "20", "required" => "required"}
    %span{ "ng-show" => "<%= class_name %>Form.name.$error.minlength"} 
      =I18n.t('.must_be_caracters_at_least', :default => 'Must be at least %{nb} caracters', :nb => 3)
    %span{ "ng-show" => "<%= class_name %>Form.name.$error.maxlength"} 
      =I18n.t('.must_be_caracters_maximum', :default => 'Must be at maximum %{nb} caracters', :nb => 20)

  .form-group
    %label 
      =I18n.t('.product_details', :default => "%{product}'s details", :product => "<%= class_name %>") 
    %textarea{ :name => "detail", "ng-model" => "<%= class_name %>.detail" }