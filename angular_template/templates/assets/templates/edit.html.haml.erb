%h4
  = I18n.t(".edition_page", :default => "Edition page of %{product}", :product => "<%= class_name %>")

%div{"ng-controller" => "<%= class_name.camelize(:upper).pluralize %>DeleteController"}
  = render_haml("#{class_name}/_form.html.haml")
  .form-group
    %input{ :type => "submit", :id => "submit", :value => I18n.t('edit', :default => 'Edit') }
    %input{ :type => "submit", :id => "submit", :value => I18n.t('delete', :default => 'Delete') }
