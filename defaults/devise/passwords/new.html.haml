%div{:class => "well col-md-8 col-md-offset-2 col-xs-10 col-sm-offset-1"}
  %h2= t('.forgot_your_password', :default => 'Forgot your password?')
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => "form" }) do |f|
    = devise_error_messages!
    .form-group
      = f.label :email
      = f.email_field :email, :class => "form-control"
    .form-group
      = f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), :class => "btn btn-default"
  %hr/
  = render "devise/shared/links"
