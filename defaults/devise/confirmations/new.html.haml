%div{:class => "well col-md-8 col-md-offset-2 col-xs-10 col-sm-offset-1"}
  %h2= t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions')
  = form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :role => "form" }) do |f|
    = devise_error_messages!
    .form-group
      = f.label :email
      %br/
      = f.email_field :email, :class => "form-control"
    .form-group
      = f.submit t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions'), :class => "btn btn-default"
  = render "devise/shared/links"
