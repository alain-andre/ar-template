%div{:class => "well col-md-8 col-md-offset-2 col-xs-10 col-sm-offset-1"}
  %h2= t('.resend_unlock_instructions', :default => "Resend unlock instructions")
  = form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, :role => "form" }) do |f|
    = devise_error_messages!
    .form-group
      = f.label :email
      = f.email_field :email, :class => "form-control"
    .form-group
      = f.submit t('.resend_unlock_instructions', :default => "Resend unlock instructions"), :class => "btn btn-default"
    %hr/
  = render "devise/shared/links"
