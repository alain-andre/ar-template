<div class="container">
  <div ng-controller="FlashCtrl">
    <% flash.each do |name, msg| %>
      <% if msg.is_a?(String) %>
        <div class="col-md-10 col-md-offset-1 col-xs-10 col-sm-offset-1 alert alert-<%= name == :notice ? "success" : "danger" %>" ng-hide="hideAlert">
          <%= content_tag :strong, msg, :id => "flash_#{name}" %>
          <button class="close" ng-click="hideAlert = true">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
          </button>
        </div>
      <% end %>
    <% end %>
  </div>
 <%= yield %>
